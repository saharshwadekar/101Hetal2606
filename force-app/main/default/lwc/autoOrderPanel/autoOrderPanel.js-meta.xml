<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <masterLabel>
        Auto Order Panel
    </masterLabel>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="title" type="String" label="Title" default="New" description="Title of the panel to be shown on top." />
            <property name="showInventoryProjectionOptions" type="Boolean" label="Show Inventory Projection Options" default="true" description="Show/Hide Inventory Projection Options." />
            <property name="showInventoryAttributeOptions" type="Boolean" label="Show Inventory Attribute Options" default="true" description="Show/Hide Inventory Attribute Options." />
            <property name="showAIRecommendationOptions" type="Boolean" label="Show AI Recommendation Options" default="true" description="Show/Hide AI Recommendation Options." />
            <property name="showFSNOptions" type="Boolean" label="Show FSN Options" default="true" description="Show/Hide FSN Options." />
            <property name="showABCOptions" type="Boolean" label="Show ABC Options" default="true" description="Show/Hide ABC Options." />
            <property name="showBudgetOptions" type="Boolean" label="Show Budget Option" default="true" description="Show/Hide Budget Options." />
            <supportedFormFactors>
                <supportedFormFactor type="Small" />
                <supportedFormFactor type="Large" />
            </supportedFormFactors>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="recordId" type="String" default="{!recordId}"></property>
            <property name="objectApiName" type="String" default=""></property>
            <property name="title" type="String" label="Title" default="New" description="Title of the panel to be shown on top." />
            <property name="showInventoryProjectionOptions" type="Boolean" label="Show Inventory Projection Options" default="true" description="Show/Hide Inventory Projection Options." />
            <property name="showInventoryAttributeOptions" type="Boolean" label="Show Inventory Attribute Options" default="true" description="Show/Hide Inventory Attribute Options." />
            <property name="showAIRecommendationOptions" type="Boolean" label="Show AI Recommendation Options" default="true" description="Show/Hide AI Recommendation Options." />
            <property name="showFSNOptions" type="Boolean" label="Show FSN Options" default="true" description="Show/Hide FSN Options." />
            <property name="showABCOptions" type="Boolean" label="Show ABC Options" default="true" description="Show/Hide ABC Options." />
            <property name="showBudgetOptions" type="Boolean" label="Show Budget Option" default="true" description="Show/Hide Budget Options." />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>